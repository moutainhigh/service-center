<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper 
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.shengsu.log.mapper.LogOpMapper">
<!-- Result Map-->
	<resultMap id="logOp_result_map" type="logOp">
	</resultMap>

	<!-- 查询条件 -->
	<sql id="logOp_where_clause">
		<where>
			<if test="startTime != null and startTime != ''">
				and o.op_time >= #{startTime}
			</if>
			<if test="endTime!=null and endTime !='' ">
				and DATE_ADD(date_format(#{endTime,jdbcType=VARCHAR},"%Y-%m-%d %H:%i:%s"),interval 1 day) >=o.op_time
			</if>
		</where>
	</sql>

	<!-- 获取所有操作日志记录数 -->
	<select id="countAll" resultType="int">
		select
			count(1)
		from
			system_log_op o
		<include refid="logOp_where_clause" />
	</select>

    <!-- 获取操作日志信息列表 -->
	<select id="listByPage" parameterType="logOp" resultMap="logOp_result_map">
		<include refid="global.paginationStart_mysql" />
		select
			rand() id,
			o.*
		from
			system_log_op  o
		<include refid="logOp_where_clause" />
		order by 
			op_time desc
		<include refid="global.paginationEnd_mysql" />
	</select>
	
	<!-- 新增操作日志 -->
	<insert id="save" parameterType="logOp">
		insert into system_log_op
		(
			op_type,
			operator_id,
			operator,
			op_ip,
			op_time,
			state,
			content
		)
		values
		(
			#{opType,jdbcType=VARCHAR},
			#{operatorId,jdbcType=VARCHAR},
			#{operator,jdbcType=VARCHAR},
			#{opIp,jdbcType=VARCHAR},
			current_timestamp(),
			#{state,jdbcType=INTEGER},
			#{content,jdbcType=CLOB}
		)
	</insert>
</mapper>
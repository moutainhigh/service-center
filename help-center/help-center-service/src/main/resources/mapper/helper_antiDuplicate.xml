<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper 
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.shengsu.helper.mapper.AntiDuplicateMapper">

	<!-- Result Map-->
	<resultMap id="antiDuplicate_result_map" type="antiDuplicate">
		<result property="duplicateId" column="duplicate_id" />
	</resultMap>

	<!-- 新增 -->
	<insert id="save" parameterType="antiDuplicate"> 
		insert into anti_duplicate
		(
			duplicate_id,
			create_time
		)
		values
		(
			#{duplicateId,jdbcType=VARCHAR},
			current_timestamp()
		)
	</insert>
	
	<!-- 批量新增 -->
	<insert id="batchSave" parameterType="java.util.List">
		insert into anti_duplicate
		(
			duplicate_id,
			create_time
		)
		<foreach collection="list" item="item" index="index" separator="union all">
		(
		select
			#{item.duplicateId},
			current_timestamp()
		from 
			dual
		)
		</foreach>
	</insert>
	
	<!-- 删除 -->
	<delete id="delete" parameterType="string">
		delete from
			anti_duplicate
		where
			duplicate_id=#{duplicateId}
	</delete>

	<!-- 批量删除-->
	<delete id="batchDelete" parameterType="java.util.List">
		delete from
			anti_duplicate
		where
			duplicate_id in
			<foreach collection="list" item="duplicateId" open="(" separator="," close=")">
				#{duplicateId}
		    </foreach>
	</delete>
	
</mapper>
